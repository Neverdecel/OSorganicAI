# ============================================
# OSOrganicAI Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# AI Model Configuration
# ============================================
AI_MODEL_PROVIDER=openai           # Options: openai, anthropic, ollama
AI_API_KEY=your-api-key-here       # Your AI provider API key
AI_MODEL_NAME=gpt-4                # Model to use (gpt-4, claude-3-opus, etc.)
AI_TEMPERATURE=0.7                 # Temperature for AI responses (0.0-1.0)
AI_MAX_TOKENS=2000                 # Maximum tokens for AI responses

# ============================================
# GitHub Configuration
# ============================================
GITHUB_TOKEN=ghp_your_token_here   # GitHub Personal Access Token
GITHUB_REPO=yourusername/osorganicai  # Your GitHub repository (owner/repo)
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here  # Secret for webhook verification

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co  # Your Supabase project URL
SUPABASE_ANON_KEY=your-anon-key-here           # Supabase anonymous key (public)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here  # Supabase service role key (private!)

# ============================================
# Application Configuration
# ============================================
APP_ENV=development                # Options: development, staging, production
APP_PORT=8000                      # Port for local development
DEBUG=true                         # Enable debug mode (true/false)
LOG_LEVEL=INFO                     # Options: DEBUG, INFO, WARNING, ERROR

# ============================================
# Vercel Deployment (Set in Vercel Dashboard)
# ============================================
# These are automatically set by Vercel, but you can override for local dev:
# VERCEL_ENV=production
# VERCEL_URL=your-app.vercel.app
# VERCEL_GIT_COMMIT_SHA=
# VERCEL_GIT_COMMIT_REF=

# ============================================
# Optional: Redis/Upstash (if using for caching)
# ============================================
# REDIS_URL=redis://localhost:6379

# ============================================
# Optional: Sentry (for error tracking)
# ============================================
# SENTRY_DSN=https://your-sentry-dsn

# ============================================
# Optional: Analytics
# ============================================
# ANALYTICS_API_KEY=your-analytics-key
